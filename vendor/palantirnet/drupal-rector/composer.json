{
    "name": "palantirnet/drupal-rector",
    "description": "Instant fixes for your Drupal code by using Rector.",
    "type": "library",
    "keywords": [
        "code style",
        "rector",
        "drupal 8",
        "drupal 9",
        "ast"
    ],
    "require": {
        "rector/rector": "~0.12",
        "webflo/drupal-finder": "^1.2"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Dezső Biczó",
            "email": "mxr576@gmail.com"
        },
        {
            "name": "Ofer Shaal",
            "email": "shaal@palantir.net"
        },
        {
            "name": "Daniel Montgomery",
            "email": "montgomery@palantir.net"
        },
        {
            "name": "Matt Glaman",
            "email": "nmd.matt@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "DrupalRector\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DrupalRector\\Tests\\": "tests/src"
        },
        "classmap": [
            "stubs"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "update-with-dependencies": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "replace": {
        "palantirnet/drupal8-rector": "*",
        "drupal8-rector/drupal8-rector": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "php": "^8.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpunit/phpunit": "^9.5",
        "rector/rector-src": "~0.12",
        "symfony/yaml": "^5"
    }
}
